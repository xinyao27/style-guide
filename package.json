{
  "name": "@xystack/style-guide",
  "version": "0.3.17",
  "description": "xinyao's style guide",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/xinyao27/style-guide#readme",
  "bugs": {
    "url": "https://github.com/xinyao27/style-guide/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xinyao27/style-guide.git"
  },
  "files": [
    "bin",
    "dist",
    "package.json",
    "typescript"
  ],
  "exports": {
    "./eslint": "./dist/eslint/index.js",
    "./prettier": "./dist/prettier/index.js",
    "./typescript": "./typescript/tsconfig.json"
  },
  "bin": "./bin/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "up": "taze -Ir",
    "prepare": "simple-git-hooks",
    "dev": "eslint-config-inspector --config eslint-inspector.config.ts",
    "build": "tsdown",
    "eslint-check": "eslint --max-warnings=0 .",
    "prettier-check": "prettier --check .",
    "prerelease": "npm run build",
    "release": "bumpp && bun publish"
  },
  "peerDependencies": {
    "eslint": ">=8.48.0 <10",
    "prettier": ">=3.0.0 <4",
    "typescript": ">=4.8.0 <6"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    },
    "prettier": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@antfu/ni": "^24.3.0",
    "@clack/prompts": "^0.10.1",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.25.1",
    "@next/eslint-plugin-next": "^15.3.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-define-config": "^2.1.0",
    "eslint-formatting-reporter": "^0.0.0",
    "eslint-parser-plain": "^0.1.1",
    "eslint-plugin-import-x": "^4.11.0",
    "eslint-plugin-jsonc": "^2.20.0",
    "eslint-plugin-perfectionist": "^4.12.3",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unicorn": "^59.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-yml": "^1.18.0",
    "fs-extra": "^11.3.0",
    "globals": "^16.0.0",
    "jsonc-eslint-parser": "^2.4.0",
    "local-pkg": "^1.1.1",
    "parse-gitignore": "^2.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "synckit": "^0.11.4",
    "typescript-eslint": "^8.31.1",
    "xycolors": "^0.1.2",
    "yaml-eslint-parser": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/config-inspector": "^1.0.2",
    "@types/bun": "^1.2.11",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^19.1.2",
    "bumpp": "^10.1.0",
    "eslint": "^9.25.1",
    "lint-staged": "^15.5.1",
    "simple-git-hooks": "^2.13.0",
    "taze": "^19.0.4",
    "tsdown": "^0.10.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "prettier -w --ignore-unknown"
  },
  "prettier": "./dist/prettier/index.js"
}
